@model UserFormViewModel

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title"> Add Roles</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form method="post" asp-controller="Users" asp-action="Create" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="mb-5">
                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" placeholder="Name" asp-for="FullName" />
                                <label asp-for="FullName"></label>
                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-5">
                            <div class="form-floating mb-2">
                                <input type="text" class="form-control" placeholder="UserName" asp-for="UserName" />
                                <label asp-for="UserName"></label>
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-5">
                            <div class="form-floating mb-2">
                                <input type="email" class="form-control" placeholder="Email" asp-for="Email" />
                                <label asp-for="Email"></label>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-5">
                            <div class="form-floating mb-2">
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
                                <label asp-for="Password"></label>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-5">
                            <div class="form-floating mb-2">
                                <input type="password" class="form-control" placeholder="ConfirmPassword" asp-for="ConfirmPassword" />
                                <label asp-for="ConfirmPassword"></label>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div>
                            <div class="mb-5">
                                <div class="mb-2">
                                    <select class="form-select" asp-for="SelectedRoles" asp-items="@Model.Roles">
                                        <option>Select Roles</option>
                                    </select>
                                    <label asp-for="SelectedRoles"></label>
                                </div>
                                <span asp-validation-for="SelectedRoles" class="text-danger d-block"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="bi bi-check2"></i>
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}